<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="note"
            type="com.proj.notes_board.model.Note" />

        <import type="com.proj.notes_board.ui.BindingAdapter" />

        <import type="androidx.core.content.ContextCompat" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@{note.title}"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/noteColor"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="0"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@{ContextCompat.getColor(context, note.noteColor)}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@{note.description}" />

            <TextView
                android:id="@+id/createdDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                app:date="@{note.createdDate}" />
        </LinearLayout>
    </LinearLayout>
</layout>